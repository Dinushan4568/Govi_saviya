<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#4CAF50"
        android:padding="16dp"
        android:elevation="4dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🌾 ගොවි සභාව - Community"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="👥 Online: 247"
            android:textSize="12sp"
            android:textColor="#E8F5E8"
            android:background="#66BB6A"
            android:padding="6dp"
            android:layout_marginStart="8dp"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <!-- Social Media Links -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:padding="12dp"
        android:elevation="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="සම්බන්ධ වන්න:"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="12dp" />

        <Button
            android:id="@+id/whatsappButton"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="📱 WhatsApp"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:background="#25D366"
            android:layout_marginEnd="8dp"
            android:paddingHorizontal="12dp" />

        <Button
            android:id="@+id/facebookButton"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="📘 Facebook"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:background="#1877F2"
            android:paddingHorizontal="12dp" />

    </LinearLayout>

    <!-- Quick Stats -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:padding="12dp"
        android:layout_marginTop="1dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1,247"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#4CAF50" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="සාමාජිකයන්"
                android:textSize="12sp"
                android:textColor="#666666" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="342"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FF9800" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="අද පණිවිඩ"
                android:textSize="12sp"
                android:textColor="#666666" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="89"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2196F3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ප්‍rश्न"
                android:textSize="12sp"
                android:textColor="#666666" />

        </LinearLayout>

    </LinearLayout>

    <!-- Messages Area -->
    <ScrollView
        android:id="@+id/messagesScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:scrollbars="vertical"
        android:fadeScrollbars="false">

        <LinearLayout
            android:id="@+id/messagesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </ScrollView>

    <!-- Selected Image Preview -->
    <ImageView
        android:id="@+id/selectedImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="8dp"
        android:scaleType="centerCrop"
        android:background="#E0E0E0"
        android:visibility="gone" />

    <!-- Message Input Area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:padding="12dp">

        <!-- Input Controls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/messageEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="පණිවිඩයක් ටයිප් කරන්න..."
                android:padding="12dp"
                android:background="@drawable/edittext_background"
                android:textSize="16sp"
                android:maxLines="3"
                android:inputType="textMultiLine|textCapSentences" />

            <Button
                android:id="@+id/sendButton"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="📤"
                android:textSize="18sp"
                android:background="#4CAF50"
                android:textColor="#FFFFFF"
                android:layout_marginStart="8dp"
                android:minWidth="48dp" />

        </LinearLayout>

        <!-- Media Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center">

            <Button
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="🖼️ පින්තූරය"
                android:textSize="12sp"
                android:background="#E1F5FE"
                android:textColor="#0277BD"
                android:layout_marginEnd="8dp"
                android:paddingHorizontal="16dp" />

            <Button
                android:id="@+id/cameraButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="📸 කැමරාව"
                android:textSize="12sp"
                android:background="#FFF3E0"
                android:textColor="#E65100"
                android:paddingHorizontal="16dp" />

        </LinearLayout>

        <!-- Quick Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="💡 ප්‍රශ්නය"
                android:textSize="12sp"
                android:textColor="#FF9800"
                android:background="#FFF8E1"
                android:padding="6dp"
                android:layout_marginEnd="8dp"
                android:clickable="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🌱 අත්දැකීම්"
                android:textSize="12sp"
                android:textColor="#4CAF50"
                android:background="#E8F5E8"
                android:padding="6dp"
                android:layout_marginEnd="8dp"
                android:clickable="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="💰 විකිණීම"
                android:textSize="12sp"
                android:textColor="#2196F3"
                android:background="#E3F2FD"
                android:padding="6dp"
                android:clickable="true" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="vertical"
        android:paddingBottom="0dp">

        <!-- Weather Card -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/bg_header"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="20dp">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="152dp"
            android:background="@drawable/bg_weather_card"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="20dp">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:fontFamily="monospace"
                android:text="ðŸš€ Quick Actions"
                android:textSize="20sp" />

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:columnCount="2"
                android:rowCount="2">

                <ImageView
                    android:id="@+id/ivMarketplace"
                    android:layout_width="183dp"
                    android:layout_height="179dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bg_marketplace_icon" />

                <ImageView
                    android:id="@+id/ivVideoTutorials"
                    android:layout_width="191dp"
                    android:layout_height="180dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bg_tutorials_icon"
                    android:padding="10dp" />

                <ImageView
                    android:id="@+id/ivExpertAdvice"
                    android:layout_width="178dp"
                    android:layout_height="182dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bg_expert_advice_icon"
                    android:padding="10dp" />

                <ImageView
                    android:id="@+id/ivCommunity"
                    android:layout_width="192dp"
                    android:layout_height="180dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bg_community_icon"
                    android:padding="10dp" />

            </GridLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:fontFamily="serif-monospace"
                android:text="ðŸŒ± More Features"
                android:textSize="20sp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="2">

                <ImageView
                    android:id="@+id/ivDiseaseAlert"
                    android:layout_width="126dp"
                    android:layout_height="128dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/bg_diseases_icon"
                    android:padding="8dp" />

                <ImageView
                    android:id="@+id/ivFarmCalendar"
                    android:layout_width="129dp"
                    android:layout_height="128dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/bg_calendar_icon"
                    android:padding="8dp" />

                <ImageView
                    android:id="@+id/ivFinancialHelp"
                    android:layout_width="119dp"
                    android:layout_height="129dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/bg_financial_icon"
                    android:padding="8dp" />

                <ImageView
                    android:id="@+id/ivFindWorkers"
                    android:layout_width="121dp"
                    android:layout_height="125dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/bg_workers_icon"
                    android:padding="8dp" />

                <ImageView
                    android:id="@+id/ivPesticides"
                    android:layout_width="132dp"
                    android:layout_height="125dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/bg_pesticides_icon"
                    android:padding="8dp" />

                <ImageView
                    android:id="@+id/ivFeedback"
                    android:layout_width="122dp"
                    android:layout_height="125dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/bg_feedback_icon"
                    android:padding="8dp" />

            </GridLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@color/white"
            android:elevation="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="12dp"
            android:paddingBottom="0dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:src="@drawable/ic_home" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:src="@drawable/ic_shopping_cart" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:src="@drawable/ic_chat" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:src="@drawable/ic_learn" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:src="@drawable/ic_user" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
